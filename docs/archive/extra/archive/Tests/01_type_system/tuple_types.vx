// Test tuple types and destructuring
// Expected: Most assertions pass (tuple syntax may vary)

fn main(): i32 {
    // Basic tuple
    let pair: (i32, i32) = (10, 20);
    assert(pair.0 == 10, "Tuple first element");
    assert(pair.1 == 20, "Tuple second element");
    
    // Tuple with different types
    let mixed: (i32, f64, bool) = (42, 3.14, true);
    assert(mixed.0 == 42, "Mixed tuple i32");
    assert(mixed.1 > 3.0, "Mixed tuple f64");
    assert(mixed.2, "Mixed tuple bool");
    
    // Tuple destructuring
    let (x, y) = (100, 200);
    assert(x == 100, "Destructured x");
    assert(y == 200, "Destructured y");
    
    // Nested tuples
    let nested: ((i32, i32), (i32, i32)) = ((1, 2), (3, 4));
    assert(nested.0.0 == 1, "Nested tuple access");
    assert(nested.1.1 == 4, "Nested tuple access 2");
    
    // Function returning tuple
    let (a, b) = swap(5, 10);
    assert(a == 10, "Swapped first");
    assert(b == 5, "Swapped second");
    
    $print("âœ… All tuple tests passed!");
    return 0;
}

fn swap(x: i32, y: i32): (i32, i32) {
    return (y, x);
}
