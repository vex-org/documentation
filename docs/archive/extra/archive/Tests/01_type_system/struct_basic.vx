// Test basic struct definition and usage
// Expected: All assertions pass

struct Point {
    x: i32,
    y: i32,
}

fn (p: &Point) distance(): i32 {
    return p.x + p.y;
}

struct Person {
    name: string,
    age: u8,
    height: f32,
}

fn (p: &Person) is_adult(): bool {
    return p.age >= 18;
}


fn main(): i32 {
    // Basic struct construction
    let p = Point { x: 10, y: 20 };
    assert(p.x == 10, "Struct field x");
    assert(p.y == 20, "Struct field y");
    
    // Struct with different field types
    let person = Person {
        name: "Alice",
        age: 30,
        height: 165.5
    };
    
    assert(person.age == 30, "Person age");
    assert(person.height > 165.0, "Person height");
    
    // Struct modification
    let origin = Point { x: 0, y: 0 };
    assert(origin.x == 0, "Origin x");
    assert(origin.y == 0, "Origin y");
    
    // Nested struct
    let p2 = Point { x: 5, y: 10 };
    let sum_x = p.x + p2.x;
    assert(sum_x == 15, "Sum of x coordinates");
    
    $print("âœ… All basic struct tests passed!");
    return 0;
}
