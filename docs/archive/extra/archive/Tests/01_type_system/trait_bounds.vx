// Test Go-style external methods
// Expected: All assertions pass

struct Point {
    x: i32,
    y: i32,
}

fn (p: &Point) toString(): string {
    return "Point";
}

fn (p: &Point) add(other: Point): Point {
    return Point { x: p.x + other.x, y: p.y + other.y };
}

fn main(): i32 {
    let p1 = Point { x: 10, y: 20 };
    let p2 = Point { x: 5, y: 15 };
    
    // Call external methods
    let s = p1.toString();
    $print(s);
    
    let result = p1.add(p2);
    assert(result.x == 15, "Point add x");
    assert(result.y == 35, "Point add y");
    
    $print("âœ… All external method tests passed!");
    return 0;
}
