// Test Option type usage
// Expected: All assertions pass

fn find_even_in_array(a: i32, b: i32, c: i32, d: i32, e: i32): Option<i32> {
    if a % 2 == 0 { return Some(a); }
    if b % 2 == 0 { return Some(b); }
    if c % 2 == 0 { return Some(c); }
    if d % 2 == 0 { return Some(d); }
    if e % 2 == 0 { return Some(e); }
    return None;
}

fn main(): i32 {
    // Test Some case - has even number (4)
    let res1 = find_even_in_array(1, 3, 5, 4, 7);
    match res1 {
        Some(val) => assert(val == 4, "Option Some value"),
        None => assert(false, "Option should be Some"),
    }

    // Test None case - no even numbers
    let res2 = find_even_in_array(1, 3, 5, 7, 9);
    match res2 {
        Some(_) => assert(false, "Option should be None"),
        None => { /* OK */ },
    }

    $print("âœ… All Option type tests passed!");
    return 0;
}
