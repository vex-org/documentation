// Test loop constructs
// Expected: All assertions pass

fn main(): i32 {
    // While loop
    let! i = 0;
    while i < 5 {
        i = i + 1;
    }
    assert(i == 5, "While loop");

    // For loop (range)
    let! sum = 0;
    for j in 0..5 {
        sum = sum + j;
    }
    assert(sum == 10, "For loop range"); // 0+1+2+3+4 = 10

    // Loop with break
    let! k = 0;
    loop {
        k = k + 1;
        $println("k =", k);
        if k == 3 {
            break;
        }
    }
    assert(k == 3, "Loop break");

    // Loop with continue
    let! count = 0;
    for n in 0..10 {
        if n % 2 == 0 {
            continue;
        }
        count = count + 1;
    }
    assert(count == 5, "Loop continue"); // 1, 3, 5, 7, 9

    $print("âœ… All loop tests passed!");
    return 0;
}
