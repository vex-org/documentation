// Test basic closure definition and usage
// Expected: All assertions pass

fn main(): i32 {
    // Basic closure with no arguments
    let hello = || {
        return 42;
    };
    assert(hello() == 42, "Basic no-arg closure");

    // Closure with arguments and implicit return
    let add = |a: i32, b: i32| a + b;
    assert(add(10, 20) == 30, "Closure with args");

    // Closure with block body
    let multiply = |x: i32, y: i32| {
        let result = x * y;
        return result;
    };
    assert(multiply(5, 6) == 30, "Closure with block body");

    // Type inference (if supported, otherwise explicit types)
    // Assuming explicit types for now based on other tests
    let inc = |x: i32| x + 1;
    assert(inc(99) == 100, "Closure type inference");

    $print("âœ… All basic closure tests passed!");
    return 0;
}
